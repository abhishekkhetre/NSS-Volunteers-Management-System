              <li class="nav-item">
                  <a class="nav-link" href="/activity">Attendance</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="/display_menu">Display</a>
              </li>
              </ul>
            </div>
            </nav>
        </div>

<!-- Table -->
<form name="activity_details" method="POST" action="/display_attendance">
    <div class="page">
        <h1>Activity Details</h1>
        <table class="layout display responsive-table">
            <thead>
                <tr>
                    <th>Activity No</th>
                    <th>Activity Name</th>
                    <th>Location</th>
                    <th>Info</th>
                    <th>Day & Date</th>
                    <th>Attendance</th>
                </tr>
            </thead>
            <tbody>
                each act in acts 
                    tr
                    td=act.activity_no
                    td=act.activity_name
                    td=act.location
                    td=act.information
                    td=act.date
                        <td class="actions">
                              <button type="submit" name="act" class="btn btn-outline-primary " value="#{ act.activity_no }">Check</button>
                        </td>
            </tbody>
        </table>
    </div>    
</form>
</body>
</html>
